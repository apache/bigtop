						<exclude>**/*TestHiveEmbedded.java</exclude>
						<exclude>**/*TestCrunch.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>pig</id>
			<build>
				<plugins>
